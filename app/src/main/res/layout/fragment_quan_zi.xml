<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFF0F2"
    tools:context="com.example.zouyingjun.quanzi.fragment.JingXuanFragment">

    <include layout="@layout/actionbar"/>

    <com.example.zouyingjun.quanzi.view.TabGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/tg_quanzi"
        android:layout_height="40dp">
        <RadioButton
            android:layout_width="0dp"
            android:text="精品区"
            android:gravity="center"
            android:textColor="@color/selector_text_color"
            android:button="@null"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <RadioButton
            android:layout_width="0dp"
            android:text="资源区"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/selector_text_color"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <RadioButton
            android:layout_width="0dp"
            android:text="交流区"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/selector_text_color"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </com.example.zouyingjun.quanzi.view.TabGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8A8A8A"
        android:layout_marginBottom="5dp"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_quanzi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

</LinearLayout>

